/* light/light1/light1.wxss */
page{
  overflow: hidden;
  background: rgb(255, 255, 255);
}
.scroll-box{
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  height: 100%;
  width: 100%;
  white-space: nowrap;
}
.card-box{
  display: inline-block;
}
.card{
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  top:0rem;
  height:95vh;
  width: 100vw;
  font-size: 40px;
  border-radius: 0px;
}
.image1{
  top: 0rem;
  left: 0rem;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: center;
}
.home-wrap{
  background: #f2f2f2;
  height: 90rpx;
}
.workbench{
  font-size: 10rpx;
  background: #fff;
  padding-bottom: 0rpx;
  margin-bottom:0rpx;
  color: #333;
  z-index: 5;
}
.workbench .list{
  display: flex;
  flex-direction: row;
  flex:1;
  z-index: 5;
}
.workbench .items{
  width: 120rpx;
  flex:1;
  text-align: center;
  z-index: 5;
}
.workbench .items image{
  margin-left: 0rem;
  width: 80rpx;
  height: 80rpx;
  z-index: 5;
}
.workbench .items image.service-icon2{
  width: 160rpx;
  height:100rpx;
  right: 0rem;
  z-index: 5;
}
.workbench .items image.service-icon3{
  width: 190rpx;
  height: 90rpx;
  opacity: 0;
}
button[plain]
{ border:0;
  width: 100px;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 9%;
  left: 3%;
  opacity: 0.85;
} 
.modal-dialog {
  overflow: visible;
  position: fixed;
  top: 11%;
  left: -10%;
  margin: 0rpx 5rpx;
  border-radius: 10%;
}

.iconbench{
  padding-bottom: 0rpx;
  margin-bottom:0rpx;
  color: #333;
}
.iconbench .list{
  display: flex;
  flex-direction: row;
  flex:1;
}
.iconbench .items{
  width: 100rpx;
  height: 100rpx;
  flex:1;
}
.view-image{
  width: 290rpx;
  height: 290rpx;
}

